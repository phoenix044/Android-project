<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="325dp"
        android:layout_height="260dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/spinner_top_background"
            android:gravity="center"
            android:textSize="17sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/spinner_main_background">

            <View
                android:layout_width="265dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="59dp"
                android:background="@color/colorItem"/>

            <View
                android:layout_width="265dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="95dp"
                android:background="@color/colorItem"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="111dp"
                android:layout_marginTop="22dp"
                android:gravity="center">

                <ListView
                    android:id="@+id/spinner_list_1"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:divider="@null"
                    android:dividerHeight="22dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>

                <ListView
                    android:id="@+id/spinner_list_2"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:divider="@null"
                    android:dividerHeight="22dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="#7fFFFFFF"
                android:clickable="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:background="#7fFFFFFF"
                android:layout_marginTop="96dp"
                android:clickable="true"/>

            <Button
                android:id="@+id/bt_confirm"
                android:layout_width="233dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="158dp"
                android:background="@drawable/spinner_button_background"
                android:text="@string/confirm_text"
                android:textColor="@color/white"
                android:textSize="17sp"/>

        </RelativeLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>